<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.int_biblioteca.CrudLibrosController"
            prefWidth="700" prefHeight="500">

    <children>
        <!-- ScrollPane dentro de AnchorPane para barras de desplazamiento -->
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <content>
                <!-- VBox con padding explícito -->
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <!-- Tabla de libros -->
                    <TableView fx:id="tablaLibros" prefHeight="300" prefWidth="680">
                        <columns>
                            <TableColumn fx:id="colTitulo" text="Título" prefWidth="200"/>
                            <TableColumn fx:id="colAutor"  text="Autor"  prefWidth="200"/>
                            <TableColumn fx:id="colISBN"   text="ISBN"   prefWidth="280"/>
                        </columns>
                    </TableView>

                    <!-- Campos de entrada -->
                    <HBox spacing="10">
                        <TextField fx:id="tituloField" promptText="Título" prefWidth="200"/>
                        <TextField fx:id="autorField"  promptText="Autor"  prefWidth="200"/>
                        <TextField fx:id="isbnField"   promptText="ISBN"   prefWidth="240"/>
                    </HBox>

                    <!-- Botones de CRUD y orden -->
                    <HBox spacing="10">
                        <Button text="Agregar" onAction="#handleAgregarLibro"/>
                        <Button text="Editar"  onAction="#handleEditarLibro"/>
                        <Button text="Eliminar" onAction="#handleEliminarLibro"/>
                        <Button text="↑ Subir" onAction="#handleSubirLibro"/>
                        <Button text="↓ Bajar" onAction="#handleBajarLibro"/>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
