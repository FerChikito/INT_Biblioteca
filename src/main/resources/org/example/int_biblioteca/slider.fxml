<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.int_biblioteca.SliderController">
    <children>
        <!-- Botón izquierdo -->
        <Button fx:id="btnIzq" text="&lt;">
         <font>
            <Font size="10.0" />
         </font></Button>

        <!-- Contenedor del slide (aquí se mostrará el contenido) -->
        <StackPane fx:id="sliderContainer" prefHeight="200" prefWidth="1000.0">
            <Label fx:id="slideDefault" text="Slide inicial" />
        </StackPane>

        <!-- Botón derecho -->
        <Button fx:id="btnDerch" text="&gt;">
         <font>
            <Font size="10.0" />
         </font></Button>
    </children>
</HBox>
